# AutoSherpa Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# NEONDB DATABASE CONFIGURATION
# =============================================================================
# Get this from https://console.neon.tech/
# Format: postgresql://username:password@hostname/database?sslmode=require
DATABASE_URL=postgresql://username:password@hostname/database?sslmode=require

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
# Generate a strong random string for production
JWT_SECRET=your_super_secret_jwt_key_here_change_this_in_production

# =============================================================================
# WHATSAPP BUSINESS API
# =============================================================================
# Get these from Meta Developer Console: https://developers.facebook.com/
WHATSAPP_API_TOKEN=your_whatsapp_business_api_token_here
WHATSAPP_PHONE_NUMBER_ID=your_whatsapp_phone_number_id_here
VERIFY_TOKEN=auto

# =============================================================================
# CLOUDINARY IMAGE STORAGE (Recommended for production/Render)
# =============================================================================
# Get these from https://cloudinary.com/ (free tier available)
# Required for persistent image storage on Render
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# =============================================================================
# EXTERNALLY ACCESSIBLE BASE URL (Alternative to Cloudinary)
# =============================================================================
# Only needed if not using Cloudinary and want to serve local images
# Example: https://abc123.ngrok.app
NGROK_URL=

# =============================================================================
# SERVER PORTS
# =============================================================================
# Inventory Management System
PORT=3000

# WhatsApp Bot Service
WHATSAPP_PORT=3001

# =============================================================================
# SESSION CONFIGURATION (Optional)
# =============================================================================
# Session secret for user sessions
SESSION_SECRET=your_session_secret_key_here

# =============================================================================
# FILE UPLOAD CONFIGURATION (Optional)
# =============================================================================
# Maximum file size for uploads (in bytes)
MAX_FILE_SIZE=10485760

# =============================================================================
# SECURITY CONFIGURATION (Optional)
# =============================================================================
# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# =============================================================================
# LOGGING CONFIGURATION (Optional)
# =============================================================================
# Log level: error, warn, info, debug
LOG_LEVEL=info

# =============================================================================
# SETUP INSTRUCTIONS
# =============================================================================
# 1. Copy this file to .env
# 2. Fill in your NeonDB connection string
# 3. Generate a strong JWT_SECRET
# 4. Add your WhatsApp Business API credentials
# 5. Start the services with: npm run both
